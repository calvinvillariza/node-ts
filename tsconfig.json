{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "lib": ["es2015", "es2016", "dom", "es2017", "es6", "es5"],
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*","src/types/*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude":[
        "node_modules",
        "dist"
      ]
 }